{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "Db": "Host=postgres;Username=bot;Password=secret;Database=trading"
  },
  "Trading": {
    "Exchange": "Binance",
    "Symbols": ["BTCUSDT"],
    "Interval": "15m",
    "LookbackDays": 45,
    "Streams": {
      "Kline": true,
      "BookTicker": true,
      "ReplayFallback": {
        "Enabled": false,
        "Dir": "data/raw/binance/spot/klines/15m"
      }
    },
    "Model": {
      "Long":  { 
        "Path": "models/policy-long/model.zip",  
        "Threshold": 0.60
      },
      "Short": { 
        "Path": "models/policy-short/model.zip", 
        "Threshold": 0.58
      }
    },
    "Risk": { 
      "RiskPct": 0.0075, 
      "RrMinCosted": 1.5, 
      "CostRatioMax": 0.15
    },
    "Telemetry": {
      "Prometheus": { 
        "Enabled": true, 
        "Port": 9464 },
      "Logging": { 
        "Level": "Information", 
        "SampleHighRate": 0.1
      }
    }
  }

}
